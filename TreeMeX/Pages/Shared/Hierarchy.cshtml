@using BackEnd
@using System.Reflection.Metadata
@model BackEnd.INoteHierarchy


@if (Model != null)
{
    @if (Model.IsLeaf)
    {
        <a style="display:block;" class="treemargin" href="#" hx-get="@Url.Page("Index")?note=@Model.Name" hx-target="#xContent">@Model.ShortName</a> <a href="#" onclick="createNote('@Model.Name')">+++</a>
    }
    else
    {
        <details class="treemargin">
            <summary>
                <a href="#" hx-get="@Url.Page("Index")?note=@Model.Name" hx-target="#xContent">@Model.ShortName</a> <a href="#" onclick="createNote('@Model.Name')">+++</a>
            </summary>

            @foreach (var note in (Model as NodeNote).Child)
            {
                if (@note == null)
                {
                    ;
                }
                <partial name="Hierarchy" model="@note"/>
            }
        </details>
    }
}